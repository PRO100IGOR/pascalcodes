program InspectorFont;

uses
  Windows, Messages, SysUtils, Classes, Graphics, Controls, Forms, Dialogs;

var
  InspForm: TForm;
  I: Integer;
begin
  InspForm := nil;
  for I := 0 to Screen.FormCount - 1 do
  begin
    if Screen.Forms[I].ClassNameIs('TPropertyInspector') then
    begin
      InspForm := Screen.Forms[I];
      Break;
    end;
  end;

  if InspForm = nil then
  begin
    ErrorDlg('Object Inspector Not Found.');
    Exit;
  end;

  InspForm.Caption := 'Font-Changed Inspector';
  InspForm.Font.Size := 12;
end.

